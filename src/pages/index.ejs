<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Site-PostgreSQL</title>
  <link rel="stylesheet" href="../scss/global.css">
  <link rel="stylesheet" href="../scss/index.css">
</head>

<body>
  <header class="header">
    <div class="header__container">
      <ul class="header__menu">
        <li><a href="/">Новости</a></li>
        <li><a href="/playbills">Афиши</a></li>
        <li><a href="/timetable">Расписание</a></li>
      </ul>
    </div>
  </header>
  <main class="content">
    <div class="content__container">
      <section class="content__news">
        <% news.forEach(function(newsItem) { %>
          <a href="/new/<%= newsItem.id %>">
            <div class="new__block">
              <div id="<%= newsItem.id %>" class="new__img">
                <img src="../img/fullstack.jpg" alt="<%= newsItem.photo %>">
              </div>
              <div class="new__title">
                <h2>
                  <%= newsItem.caption %>
                </h2>
              </div>
            </div>
          </a>
          <% }); %>
      </section>
    </div>
  </main>
</body>

</html>